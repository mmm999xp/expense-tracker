<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      <form action="/user/register" method="POST" class="register-form" novalidate>
        <div class="mb-3">
          <label for="name" class="mb-2">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{ name }}">

        </div>
        <div class="mb-3">
          <label for="email" class="mb-2">Email*</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{ email }}" oninput="validateEmail()"
            required>

          <div class="email-error" style="color:red;position: relative;">{{emailError}}</div>
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">Password*</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            value="{{ password }}" oninput="validatePassword()"  
            required>

          <div class="password-error" style="color:red;position: relative;"></div>

        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="mb-2">Confirm Password*</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Confirm Password" value="{{ confirmPassword }}" oninput="validateConfirmPassword()"
             required>
          <div class="confirmPassword-error" style="color:red;position: relative"></div>
        </div>
        <button type="submit" class="btn btn-primary btn-block" id="Registerbtn">Register</button>
      </form>
      <p class="lead mt-4">
        Have An Account? <a href="/user/login">Login</a>
      </p>
    </div>
  </div>
</div>

<script>
  const form = document.querySelector('.register-form')
  form.addEventListener('submit', () => {
      if (!validateEmail() || !validatePassword() || !validateConfirmPassword()) {
        event.preventDefault()
        event.stopPropagation()
      }
    })
</script>